# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JavaScript files
[*.{js,mjs,cjs}]
indent_style = space
indent_size = 2

# TypeScript (if present)
[*.{ts,tsx}]
indent_style = space
indent_size = 2

# CSS / SCSS
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# JSON and JSON5
[*.{json,json5}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Markdown
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# Binary files
[*.{png,jpg,jpeg,gif,ico,webp,woff,woff2,eot,ttf}]
trim_trailing_whitespace = false
insert_final_newline = false

# Lockfiles often generated by package managers
[package-lock.json yarn.lock pnpm-lock.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
